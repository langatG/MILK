@page
@model MILK.Pages.Categories.UpsertModel
<form method="post">
    @if (Model.Category.Id != 0 )
    {
        <input hidden asp-for="Category.Id"/>
    }
    <div class="border p-3 mt-4">
        <div class="row pb-3">
           <h2 class="text-primary">@(Model.Category.Id!=0? "Edit":"Create") Category</h2>
           <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control"/>
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
             <button type="submit" class="btn btn-primary" style="width:150px;">@(Model.Category.Id!=0? "Update":"Insert")</button>
             <a asp-page="Index" class="btn btn-secondary text-end" style="width:150px;"><i class="bi bi-box-arrow-right"></i>&nbsp;Back</a>
    </div>
</form>

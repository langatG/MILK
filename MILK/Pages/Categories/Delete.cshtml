@page
@model MILK.Pages.Categories.DeleteModel
<form method="post">
    <input hidden asp-for="Category.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-3">
           <h2 class="text-primary">Delete Category</h2>
           <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
        </div>
             <button type="submit" class="btn btn-primary" style="width:150px;">Delete</button>
             <a asp-page="Index" class="btn btn-secondary text-end" style="width:150px;">Back</a>
    </div>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

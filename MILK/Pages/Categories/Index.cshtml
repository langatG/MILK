@page
@model MILK.Pages.Categories.IndexModel
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-3">
                <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-4 text-end">
            <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus"></i>New Category</a> 
        </div>
        <div class="col-5 text-end">
            <a asp-page="Upsert" class="btn btn-primary">Update/Insert</a> 
        </div>
    </div>
    <br/>
    <br/>
     
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
           
           
               @foreach(var obj in Model.Categories)
               {
                    @if (@Model.Categories.Count() > 0)
                  {
                    <tr>
                       <td width="50">@obj.Name</td>
                       <td width="50">@obj.DisplayOrder</td>
                       <td width="10">
                           <div class="w-75 btn-group" role="group"> 
                              <a asp-page="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                              <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 test-danger"><i class="bi bi-trash"></i></a>
                           </div> 
                       </td>
                    </tr>
                }
                else
                 {
                      <p>No Categories available</p>;
                 }
            }           
        </tbody>
    </table>

</div>
